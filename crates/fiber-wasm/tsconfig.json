{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "rootDir": ".",
    "typeRoots": [
      "/src"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "webpack.config.js",
    "dist/**",
    "node_modules/**"
  ]
}
