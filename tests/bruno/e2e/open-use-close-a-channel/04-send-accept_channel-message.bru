meta {
  name: accept a channel from a peer
  type: http
  seq: 4
}

post {
  url: {{NODE1_RPC_URL}}/ckb
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  Accept: application/json
}

body:json {
  {
    "request": {
      "AcceptChannel": {
        "temp_channel_id": "{{TEMP_CHANNEL_ID}}",
        "funding_amount": 100000000000
      }
    }
  }
}

assert {
  res.status: eq 200
}

