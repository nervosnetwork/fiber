meta {
  name: generate a few blocks for final settlement tx committed
  type: http
  seq: 22
}

post {
  url: {{CKB_RPC_URL}}
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  Accept: application/json
}

body:json {
  {
    "id": 42,
    "jsonrpc": "2.0",
    "method": "generate_epochs",
    "params": ["0xa"]
  }
}

assert {
  res.status: eq 200
}

script:pre-request {
  // Give watchtower a chance to push the final settlement tx into the pool
  // before mining the final blocks.
  await new Promise(r => setTimeout(r, 5000));
}

script:post-response {
  await new Promise(r => setTimeout(r, 1000));
}
