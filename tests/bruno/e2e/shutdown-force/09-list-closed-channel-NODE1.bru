meta {
  name: List all channels after shutdown force
  type: http
  seq: 9
}

post {
  url: {{NODE1_RPC_URL}}
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  Accept: application/json
}

body:json {
  {
    "id": "42",
    "jsonrpc": "2.0",
    "method": "list_channels",
    "params": [
      {
        "pubkey": "{{NODE3_PUBKEY}}",
        "include_closed": true
      }
    ]
  }
}

assert {
  res.body.error: isUndefined
  res.body.result.channels: isDefined
}

script:post-response {
  console.log(res.body.result);
  // Sleep for sometime to make sure current operation finishes before next request starts.
  await new Promise(r => setTimeout(r, 2000));
  console.log("channel first: ", res.body.result.channels[0]);
  if (res.body.result.channels[0].state.state_name != 'CLOSED') {
    throw new Error("Assertion failed: expect thel channel is closed");
  }
  if (res.body.result.channels[0].shutdown_transaction_hash == null) {
    throw new Error("Assertion failed: expect shutdown_transaction_hash is not null");
  }
}
