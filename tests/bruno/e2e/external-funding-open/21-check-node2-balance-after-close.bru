meta {
  name: check node2 balance after close
  type: http
  seq: 25
}

post {
  url: {{CKB_RPC_URL}}
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  Accept: application/json
}

body:json {
  {
    "id": 42,
    "jsonrpc": "2.0",
    "method": "get_cells_capacity",
    "params": [
      {
        "script_type": "lock",
        "script": {}
      }
    ]
  }
}

script:pre-request {
  const script = bru.getVar("NODE2_FUNDING_SCRIPT");
  const body = req.getBody();
  body.params[0].script = script;
  req.setBody(body);
}

assert {
  res.body.error: isUndefined
  res.body.result.capacity: isDefined
}

script:post-response {
  const status = bru.getVar("EXTERNAL_FUNDING_SUBMIT_STATUS");
  if (status !== "submitted") {
    console.log(
      `[external-funding-open] skip node2 post-close balance check because submit status is ${String(status)}`,
    );
    return;
  }

  const beforeOpen = BigInt(bru.getVar("NODE2_BALANCE_BEFORE"));
  const afterOpen = BigInt(bru.getVar("NODE2_BALANCE_AFTER"));
  const afterClose = BigInt(res.body.result.capacity);

  bru.setVar("NODE2_BALANCE_AFTER_CLOSE", res.body.result.capacity);
  bru.setVar("NODE2_BALANCE_DIFF_CLOSE", (afterClose - beforeOpen).toString());

  if (afterClose >= beforeOpen) {
    throw new Error(
      `Assertion failed: node2 should still be lower than initial balance after close, before_open=${beforeOpen}, after_close=${afterClose}`,
    );
  }

  if (afterClose <= afterOpen) {
    throw new Error(
      `Assertion failed: node2 balance should increase after close versus post-open, after_open=${afterOpen}, after_close=${afterClose}`,
    );
  }
}
